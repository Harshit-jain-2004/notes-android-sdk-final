<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.microsoft.notes.ui.theme.ThemedRecyclerView
        android:id="@+id/notesRecyclerView"
        android:tag="@string/primary_background_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:descendantFocusability="afterDescendants"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/sn_noteslist_padding_bottom_without_fab_button"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp" />

    <com.microsoft.notes.ui.noteslist.placeholder.NotesListPlaceholder
        android:id="@+id/notesListPlaceholder"
        android:tag="@string/primary_background_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</FrameLayout>
