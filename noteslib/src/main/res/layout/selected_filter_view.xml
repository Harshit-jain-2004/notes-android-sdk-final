<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selected_filter"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/selected_filter_spacer"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="32dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/rounded_background"
        android:importantForAccessibility="yes">

        <TextView
            android:id="@+id/selected_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@string/sn_roboto_regular"
            android:textFontWeight="400"
            android:textColor="@color/selected_filter_view_text_color"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:importantForAccessibility="no"
            android:focusable="false"
            />

        <ImageView
            android:id="@+id/selected_filter_close_option"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="8dp"
            app:srcCompat="@drawable/icon_close_filter_chip"
            android:layout_gravity="center_vertical"
            android:importantForAccessibility="no"
            android:focusable="false"
            />

    </LinearLayout>

</LinearLayout>

