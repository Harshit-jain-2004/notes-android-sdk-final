<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sn_content_background">

    <View
        android:id="@+id/SNOutsideCanvasDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/cameraButtonOutsideSNCanvasRibbon"
        android:tag="@string/option_icon_tag"
        style="@style/SNRibbonButtonStyle"
        android:contentDescription="@string/sn_add_photo_to_note"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SNOutsideCanvasDivider"
        app:srcCompat="@drawable/sn_ic_camera_24dp" />

    <Button
        android:id="@+id/doneButton"
        android:tag="@string/sn_done"
        android:text="@string/sn_done"
        android:contentDescription="@string/sn_done"
        style="@style/SNTextRibbonButtonStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@+id/SNOutsideCanvasDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>
