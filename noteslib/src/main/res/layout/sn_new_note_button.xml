<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newInkNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/sn_add_ink_note"
            android:tint="@color/sn_primary_color"
            android:visibility="gone"
            app:fabSize="mini"
            app:layout_anchor="@id/newNoteFab"
            app:backgroundTint="@color/sn_white"
            app:rippleColor="@color/sn_black"
            app:srcCompat="@drawable/sn_ic_add_ink" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/newNoteFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/sn_add_note"
            android:tint="@color/sn_white"
            android:visibility="visible"
            app:backgroundTint="@color/sn_primary_color"
            app:rippleColor="@color/sn_black"
            app:srcCompat="@drawable/sn_ic_add" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
